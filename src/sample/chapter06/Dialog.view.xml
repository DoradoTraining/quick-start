<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View>
    <Dialog id="dialog1">
      <Property name="width">400</Property>
      <Property name="height">300</Property>
      <Property name="caption">对话框范例</Property>
      <Property name="maximizeable">true</Property>
      <Property name="maximized">false</Property>
      <Property name="minimizeable">true</Property>
      <Property name="modal">true</Property>
      <Buttons>
        <Button>
          <Property name="caption">关闭</Property>
        </Button>
      </Buttons>
      <Children>
        <TextArea/>
      </Children>
      <Tools/>
    </Dialog>
    <Button id="btnShowDialog">
      <ClientEvent name="onClick">view.get(&quot;#dialog1&quot;).show();&#xD;
</ClientEvent>
      <Property name="caption">打开对话框</Property>
    </Button>
    <Button id="btnHideDialog">
      <ClientEvent name="onClick">view.get(&quot;#dialog1&quot;).hide();&#xD;
</ClientEvent>
      <Property name="caption">隐藏对话框</Property>
    </Button>
  </View>
</ViewConfig>
